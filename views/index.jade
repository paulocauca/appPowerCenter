extends layout

block content

  if session.isLoggedIn
  div(class="row")
   div(class="col-sm-10 col-sm-offset-1")
      if packages.length > 0
        table(class="table")
          tr
            th N° Pacote
            th Status
            th Data Criação
            th
          each package, i in packages
            tr
              td 
                a(href='/package/#{package._id}') #{package._id}
              td 
               p #{package.status}           
              td #{moment(package.dataPkge).format("DD/MM/YYYY HH:mm")}
              td 
               a(href="delPkge/" + package._id title="Deletar Package")
                span(class="glyphicon glyphicon-trash")
      else
        h3 Nenhum Pacote Criado
